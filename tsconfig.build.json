{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "rootDir": "src",
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "bundler",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
     "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"]
}
